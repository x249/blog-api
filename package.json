{
	"name": "blog-api",
	"version": "1.0.0",
	"description": "Backend for Technohexia",
	"main": "dist/index.js",
	"author": "phr3nzy",
	"license": "MIT",
	"private": true,
	"scripts": {
		"build": "tsc",
		"start": "node dist",
		"dev": "tsc-watch --onSuccess 'node dist/index.js'",
		"run-migrations": "knex migrate:up",
		"lint": "eslint --ext .ts,.js . --ignore-path .gitignore",
		"fix": "eslint --ext .ts,.js . --ignore-path .gitignore --fix"
	},
	"dependencies": {
		"argon2": "=0.26.1",
		"db-errors": "=0.2.3",
		"dotenv": "=8.2.0",
		"fastify": "=2.12.1",
		"fastify-cors": "=3.0.2",
		"fastify-env": "=1.0.1",
		"fastify-helmet": "=3.0.2",
		"fastify-metrics": "=5.0.1",
		"fastify-plugin": "=1.6.1",
		"fastify-swagger": "=2.5.0",
		"jsonwebtoken": "=8.5.1",
		"knex": "=0.20.11",
		"objection": "=2.1.3",
		"objection-soft-delete": "=1.0.7",
		"objection-visibility": "=1.0.0",
		"pg": "=7.18.2",
		"pino-pretty": "=3.6.1",
		"under-pressure": "=3.2.1"
	},
	"devDependencies": {
		"@types/jsonwebtoken": "8.3.8",
		"@types/node": "13.9.0",
		"@typescript-eslint/eslint-plugin": "2.23.0",
		"@typescript-eslint/parser": "2.23.0",
		"eslint": "=6.8.0",
		"eslint-config-prettier": "=6.10.0",
		"eslint-plugin-prettier": "=3.1.2",
		"eslint-plugin-security": "=1.4.0",
		"husky": "=4.2.3",
		"lint-staged": "=10.0.8",
		"prettier": "=1.19.1",
		"ts-node": "=8.6.2",
		"tsc-watch": "=4.2.3",
		"typescript": "=3.8.3"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,ts,md,json}": [
			"prettier --write"
		]
	}
}
